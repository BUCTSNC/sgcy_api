{
    "lint": {
        "files": {
            "exclude": [
                "static"
            ]
        },
        "rules": {
            "tags": [
                "recommended"
            ],
            "include": [
                "ban-untagged-todo"
            ],
            "exclude": [
                "require-await"
            ]
        }
    },
    "fmt": {
        "files": {
            "exclude": [
                "static"
            ]
        },
        "options": {
            "indentWidth": 4,
            "singleQuote": false,
            "lineWidth": 80
        }
    },
    "compilerOptions": {
        "jsx": "react",
        "jsxFactory": "React.createElement",
        "jsxFragmentFactory": "React.Fragment"
    }
}
